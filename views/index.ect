<!DOCTYPE html>
<html>
	<head>

		<title>liveblocks</title>

		<meta charset="utf-8" />

		<link href="style.css" rel="stylesheet" />

		<script src="jquery/dist/jquery.min.js"></script>
		<script src="socket.io/socket.io.js"></script>
		<script>var config = JSON.parse('<%- @json %>');</script>
		<script src="client.js"></script>

	</head>
	<body>

		<section id="title">
			<h1>liveblocks</h1>
			<p>A project by <a href="http://montyanderson.net">Monty Anderson</a></p>
		</section>

		<section id="people">
			<p><span id="users">0</span> users connected.</p>
		</section>

		<section id="options">
			<input id="block-size" type="range" min="<%- @minBlockSize %>" max="<%- @maxBlockSize %>" value="20">
			<button id="clear">Clear</button>
		</section>

		<canvas></canvas>
	</body>
</html>